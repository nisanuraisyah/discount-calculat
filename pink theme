import tkinter as tk
from tkinter import messagebox

def calculateDiscount():
    try:
        original_price = float(entry_price.get())
        discount_percent = float(entry_discount.get())

        if original_price < 0 or not (0 <= discount_percent <= 100):
            raise ValueError

        final_price = original_price - (original_price * discount_percent / 100)

        resultLabel.config(
            text=f"ðŸŽ‰ Final Price: Rp. {final_price:,.2f}",
            bg="#C8E6C9",
            fg="#1B5E20"
        )

    except ValueError:
        messagebox.showerror(
            "Oops ðŸ˜…",
            "Please enter numbers correctly!\nDiscount must be 0â€“100%"
        )

# ================= WINDOW =================
window = tk.Tk()
window.geometry("430x340")
window.title("Discount Calculator")
window.configure(bg="#E8F5E9")

# ================= TITLE =================
titleLabel = tk.Label(
    window,
    text="â­ Discount Calculator â­",
    font=("Arial Rounded MT Bold", 18),
    bg="#E8F5E9",
    fg="#2E7D32"
)
titleLabel.pack(pady=15)

# ================= FRAME PRICE =================
frame1 = tk.Frame(window, bg="#B2DFDB", bd=3, relief="ridge")
label1 = tk.Label(
    frame1,
    text="Original Price ðŸ’°",
    font=("Arial", 11),
    bg="#B2DFDB",
    fg="#004D40"
)
entry_price = tk.Entry(frame1, width=20, font=("Arial", 11))

label1.grid(row=0, column=0, padx=10, pady=10)
entry_price.grid(row=0, column=1, padx=10, pady=10)
frame1.pack(pady=6)

# ================= FRAME DISCOUNT =================
frame2 = tk.Frame(window, bg="#FFF9C4", bd=3, relief="ridge")
label2 = tk.Label(
    frame2,
    text="Discount (%) ðŸŽ¯",
    font=("Arial", 11),
    bg="#FFF9C4",
    fg="#F57F17"
)
entry_discount = tk.Entry(frame2, width=20, font=("Arial", 11))

label2.grid(row=0, column=0, padx=10, pady=10)
entry_discount.grid(row=0, column=1, padx=10, pady=10)
frame2.pack(pady=6)

# ================= BUTTON =================
button1 = tk.Button(
    window,
    text="âœ¨ Calculate âœ¨",
    command=calculateDiscount,
    bg="#64B5F6",
    fg="white",
    font=("Arial", 12, "bold"),
    activebackground="#42A5F5",
    activeforeground="white",
    width=18
)
button1.pack(pady=15)

# ================= RESULT =================
resultLabel = tk.Label(
    window,
    text="Final Price: Rp. 0.00",
    font=("Arial Rounded MT Bold", 13),
    bg="#E8F5E9",
    fg="#2E7D32",
    relief="sunken",
    padx=20,
    pady=10
)
resultLabel.pack(pady=10)

window.mainloop()